<body class = "art_page">
<p id="notice"><%= notice %></p>
<nav><%=render partial: 'shared/navlinks'%></nav>
<h1>Articles</h1>

<table width="50%">
  <thead>
    <tr>
      <th>Article title</th>
      <th>Article note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.article_title %></td>
        <td><%= article.article_note %></td>
        <td><%= link_to 'Show', article, class: "btn art_butt" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn art_butt" %></td>
        <td><%= link_to 'Delete', article, method: :delete, class: "btn art_butt", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %><hr>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn new_butt" %>


</body>