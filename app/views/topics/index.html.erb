<p id="notice"><%= notice %></p>
<body class = "art_page">
<div class = "margin5">
<nav><%=render partial: 'shared/navlinks'%></nav>
<h1>Topics</h1>
</div>
<div class="row">
<div class = "col-md-2"></div>
<div class = "col-md-8">
<table width="30%" >
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic), class: "btn art_butt" %></td>
        <td><%= link_to 'Delete', topic, method: :delete, class: "btn art_butt", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class: "btn new_butt" %>
</div>
<div class = "col-md-2"></div>
</body>